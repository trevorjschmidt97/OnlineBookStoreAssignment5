@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title<br />
            @Model.Pages pages
        </h4>
        <h4>
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>$@Model.Price</small>
            </span>
        </h4>
        <h7>
            Author: @Model.AuthorFirstName @Model.AuthorLastName <br />
            Category and Classification: @Model.Category / @Model.Classification<br />
            Publisher: @Model.Publisher
        </h7>
    </div>
</div>